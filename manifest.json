{
    "name": "NameMC Scrapper",
    "description": "Scrap skins from NameMC",
    "version": "2.0",
    "permissions": [
        "activeTab",
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "NameMC Scrapper"
    },
    "manifest_version": 2
}